@model AppliVol.Models.Vol

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Vol</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdVol" class="control-label"></label>
                <input asp-for="IdVol" class="form-control" />
                <span asp-validation-for="IdVol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReferenceVol" class="control-label"></label>
                <input asp-for="ReferenceVol" class="form-control" />
                <span asp-validation-for="ReferenceVol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateDepart" class="control-label"></label>
                <input asp-for="DateDepart" class="form-control" />
                <span asp-validation-for="DateDepart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateArrive" class="control-label"></label>
                <input asp-for="DateArrive" class="form-control" />
        
            </div>

            <div class="form-group">
                <label asp-for="VilleDepart" class="control-label"></label>
                <select asp-for="VilleDepart" class="form-control">

                    <option value=""> Selectionner une ville</option>

                    @foreach (var city in ViewBag.Villes)
                    {
                        <option value="@city.Nom">@city.Nom</option>
                    }
                </select>
    
            </div>

            <div class="form-group">
                <label asp-for="VilleArrive" class="control-label"></label>
               <select asp-for="VilleArrive" class="form-control">

                   <option value=""> Selectionner une ville</option>

                    @foreach (var city in ViewBag.Villes)
                {
                    <option value="@city.Nom">@city.Nom</option>
                }


               </select>
                        <span asp-validation-for="VilleArrive" class="text-danger"></span>


            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
